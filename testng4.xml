<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Loan Department">

    <listeners>
        <listener class-name="testNG.Listeners"/>
    </listeners>
    <test verbose="2" preserve-order="true" name="Regression">

        <groups>
            <run>

                <include name="Smoke"/>
            </run>
